<html lang="en">
  <%- include("../partials/header.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <main class="registerContainer">
      <form action="/auth/register" method="POST">
        <h1 class="signUpInHeader">Sign Up to Database Gallore</h1>
        <h4 class="authMessage">
          <% if(messages.error) { %> <%- messages.error %> <% } %>
        </h4>

        <label for="name"
          >Enter Full Name: <span class="required">*</span>
        </label>
        <input type="name" name="name" required />
        <label for="email">Email: <span class="required">*</span> </label>
        <input type="email" name="email" required />

        <label for="password">Password: </label>
        <input type="password" name="password" required />
        <div class="registerExtras">
          <label for="phone">Phone: </label>
          <input type="text" name="phone" />
          <label for="genre">Favorite Genre: </label>
          <input type="genre" name="genre" />
        </div>

        <button type="submit">Sign Up</button>
      </form>
      <h5>
        Already have an Account? Sign In
        <a href="http://localhost:4000/auth/login">HERE</a>
      </h5>
    </main>
  </body>
  <%- include("../partials/footer.ejs") %>
</html>
